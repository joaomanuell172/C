#include <stdio.h>

int main() {
    
    int numero1;
    int numero2;
    int numero3;
    
    // 3. Criar 1 caixa para o resultado da soma
    int soma;
    
    printf("Digite o primeiro numero: ");
    scanf("%d", &numero1); // Guarda na caixa 'numero1'
    
  
    printf("Digite o segundo numero: ");
    scanf("%d", &numero2); // Guarda na caixa 'numero2'
    
 
    printf("Digite o terceiro numero: ");
    scanf("%d", &numero3); // Guarda na caixa 'numero3'
    
    soma = numero1 + numero2 + numero3;
    
    printf("A soma dos tres numeros e: %d\n", soma);
    
    return 0; // 6. Avisar que terminou
}
